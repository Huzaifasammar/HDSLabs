<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.LocationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:background="@drawable/about_us">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About us"
                android:layout_marginStart="@dimen/_10sdp"
                android:textColor="@color/white"
                android:textSize="34sp"
                android:textStyle="bold"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Healthline Diagnostic Services"
            android:layout_marginStart="@dimen/_20sdp"
            android:textSize="@dimen/_22sdp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:text="HDS Labs is a project of Healthline Diagnostic Services (Private) Limited that assure to continually provide comprehensive range of testing services that meet the highest quality standards at affordable price. The clients of the HDS Labs are patients, physicians, hospitals, labs and companies." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:text="We use Stat of The Art equipment to provide fast, accurate and reliable results to HDS customers. Our professionalism, experience, dedication and use of latest equipment allow us to complete processing of tests within hours instead of days." />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_60sdp"
            android:layout_marginStart="@dimen/_60sdp"
            android:background="@drawable/btn_round"
            android:text="Download Profile"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:drawableEnd="@drawable/ic_download" />

    </LinearLayout>

</ScrollView>